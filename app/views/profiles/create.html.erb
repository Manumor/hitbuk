<div class="row">
    <h2  id="profile_title"> User Profile</h2>
</div>

<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-6" id="user_info">
    
    <h4 class="user_attr">User Name: </h4>
    <h3 class="user_details"> <%= current_user.username %> </h3>
    <h4 class="user_attr">Settings: </h4>
    <h4 id="my_account_link"><%= link_to 'my account settings', main_app.edit_user_registration_path, :class => "user_details" %></h4>
    <h4 class="user_attr">User Email: </h4>
    <h4 class="user_details"> <%= current_user.email %> </h4>
    <h4 class="user_attr"> My Subjects: </h4>
    <ul class="nav nav-stacked" id="user_list">

         <% current_user.subjects.each do |subject|%>
        <li ><a  href="#"><%= subject.name %></a></li>
        <% end %>
    </ul>

    <h4 class="user_attr"> My Courses: </h4>
    <ul class="nav nav-stacked" id="user_course">
        <% current_user.courses.each do |course|%>

          <li id="course_user_choice"><%= link_to course.name, course_path(course) %><span id="uni_title"><%= University.find(course.university_id).name %></span>

           <%= link_to '  Delete', main_app.new_user_session_path, :id => "trash_delete", :class => "trash_delete btn btn-lg btn-default fa fa-trash-o", :type => "submit", data: {id: CoursesUser.find_by("user_id = ? AND course_id = ?", current_user, course)} %>
          </li>
          <br><br>
        <% end %>

    </ul>
    <br>
 <%= link_to 'Compare Courses', courses_users_path, :class => "btn btn-primary btn-lg btn-block", :id => "compare_button" %>
  </div>
  <div class="col-md-1">
  </div>